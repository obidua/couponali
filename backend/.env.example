# Application
APP_NAME="Coupon Commerce API"
APP_ENV=development
DEBUG=True
SECRET_KEY=your-secret-key-here-change-in-production
API_V1_PREFIX=/api/v1

# Server
HOST=0.0.0.0
PORT=8000

# Database
DATABASE_URL=postgresql://postgres:password@localhost:5432/coupon_commerce
DATABASE_ECHO=False
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10

# Redis
REDIS_URL=redis://localhost:6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_MAX_CONNECTIONS=10

# JWT Authentication
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440
REFRESH_TOKEN_EXPIRE_DAYS=30

# OTP
OTP_EXPIRE_MINUTES=5
OTP_LENGTH=6

# SMS (MSG91)
MSG91_AUTH_KEY=your-msg91-auth-key
MSG91_SENDER_ID=COUPON
MSG91_TEMPLATE_ID=your-template-id

# Email (SendGrid)
SENDGRID_API_KEY=your-sendgrid-api-key
FROM_EMAIL=noreply@couponcommerce.com
FROM_NAME=Coupon Commerce

# Payment Gateway (Razorpay)
RAZORPAY_KEY_ID=your-razorpay-key-id
RAZORPAY_KEY_SECRET=your-razorpay-key-secret
RAZORPAY_WEBHOOK_SECRET=your-webhook-secret

# Cashback
DEFAULT_CASHBACK_PERCENTAGE=2.5
MAX_CASHBACK_AMOUNT=500
MIN_WITHDRAWAL_AMOUNT=100

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_PER_HOUR=1000
INTERNAL_API_KEY=your-internal-key

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:3001
CORS_ALLOW_CREDENTIALS=True

# File Upload
MAX_UPLOAD_SIZE_MB=5
ALLOWED_IMAGE_EXTENSIONS=jpg,jpeg,png,webp

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Affiliate Networks
# Admitad
ADMITAD_CLIENT_ID=your-admitad-client-id
ADMITAD_CLIENT_SECRET=your-admitad-client-secret
ADMITAD_REFRESH_TOKEN=your-admitad-refresh-token

# VCommission
VCOMMISSION_API_KEY=your-vcommission-api-key

# CueLinks
CUELINKS_API_KEY=your-cuelinks-api-key
CUELINKS_PUBLISHER_ID=your-cuelinks-publisher-id
